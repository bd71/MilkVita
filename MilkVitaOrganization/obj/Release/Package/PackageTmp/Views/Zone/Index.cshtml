@model IEnumerable<MilkVitaOrganization.Models.tbl_ZoneList>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <title></title>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" type="text/javascript"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script type="text/javascript">
        function DeleteItem(id) {
            var val = id;
            if (confirm("Are you sure you want to delete this?")) {

                $.ajax({
                    url: '@Url.Action("DeleteConfirmed", "Zone")',
                    dataType: "json",
                    type: "POST",
                    cache: false,
                    data: { Id: val },
                    success: function (data) {
                        if (data.result) {
                            alert(data.result);
                            // Perform redirect
                            window.location.replace('@Url.Action("Index", "Zone")');
                        }
                    },
                    error: function (xhr) {
                        alert(xhr.responseText);
                    }
                });

            }
            else {
                return false;
            }
        }
    </script>
</head>
<h2>ZONE</h2><br />
<p>
    <button type="button" style="background-color:#8d0d82; border:none; color:white" onclick="location.href='@Url.Action("Create", "Zone")'" class="btn btn-default">Create New</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.serialNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.codeNo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.serialNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.codeNo)
        </td>
        <td>
            <input type="button" style="background-color:#8d0d82; border:none; color:white" value="Edit" onclick="location.href='@Url.Action("Edit", "Zone", new { id = item.id })'" />
            <input type="button" style="background-color:#8d0d82; border:none; color:white" value="Details" onclick="location.href='@Url.Action("Details", "Zone", new { id = item.id })'" />
            <input type="button" style="background-color:#8d0d82; border:none; color:white" value="Delete" onclick="DeleteItem(@item.id)" />
        </td>
    </tr>
}
</table>
<div style="padding:10px; border:1px solid black">
    <div><a href="@Url.Action("Report",new {id= "PDF"})"> Get Report PDF</a></div>
    <div><a href="@Url.Action("Report",new {id= "Excel"})"> Get Report Excel</a></div>
    <div><a href="@Url.Action("Report",new {id= "Word"})"> Get Report Word</a></div>
    <div><a href="@Url.Action("Report",new {id= "Image"})"> Get Report Image</a></div>
</div>
