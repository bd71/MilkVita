@{


    var alerts = TempData.ContainsKey(MilkVitaOrganization.Models.Alert.TempDataKey)
                ? (List<MilkVitaOrganization.Models.Alert>)TempData[MilkVitaOrganization.Models.Alert.TempDataKey]
                : new List<MilkVitaOrganization.Models.Alert>();


    <span class="kwrd">
        @if (alerts.Any())
        {
            <hr/>
        }
    </span>


    foreach (var alert in alerts)
    {
        <div class="alert alert-@alert.AlertStyle alert-dismissable">
            @if (alert.Dismissable)
            {
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            }
            <ul>
                <li>@Html.Raw(alert.Message)</li>
            </ul>
        </div>
    }

}


