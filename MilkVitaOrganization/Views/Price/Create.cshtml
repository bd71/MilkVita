@model MilkVitaOrganization.Models.tbl_Price

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    #wrap {
        width: 300px;
        float: left;
    }

    #left, #right {
        /*border: 1px dotted red;*/
        float: left;
    }

    #left {
        width: 250px;
    }

    #right {
        width: 50px;
    }

    .button {
        border: none;
        border-radius: 4px;
        color: white;
        padding: 0;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        margin: 0;
        font-size: 12px;
        cursor: pointer;
        background-color: #8d0d82;
    }
</style>



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>PRICE</h2><br />
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.unitId, "Unit", htmlAttributes: new { @class = "control-label col-md-2" })
            <div id="wrap">
                <div id="left">
                    @Html.DropDownList("unitId", null, "Select Unit", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.unitId, "", new { @class = "text-danger" })
                     </div>
                <div id="right">
                    <button type="button" class="btn btn-default btn-sm" style="height: 34px; width: 30px" onclick="location.href='@Url.Action("Create", "Unit")'"><span class="glyphicon glyphicon-plus"></span></button>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.itemMasterId, "Item", htmlAttributes: new { @class = "control-label col-md-2" })
            <div id="wrap">
                <div id="left">
                    @Html.DropDownList("itemMasterId", null, "Select Item", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.itemMasterId, "", new { @class = "text-danger" })
                </div>
                <div id="right">
                    <button type="button" class="btn btn-default btn-sm" style="height:34px; width:30px" onclick="location.href='@Url.Action("Create", "ItemMaster")'"><span class="glyphicon glyphicon-plus"></span></button>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.price, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.price, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" style="background-color: #8d0d82; border: none; color: white" value="Create" class="btn btn-default" />
                <button type="button" style="background-color: #8d0d82; border: none; color: white" onclick="location.href='@Url.Action("Index", "Price")'" class="btn btn-default">Cancel</button>
            </div>
            @if (ViewBag.message != null)
            {
                <script type="text/javascript">
                            window.onload = function () {
                                alert("@ViewBag.message");
                            };
                </script>
            }
        </div>
    </div>
}

