@model MilkVitaOrganization.Models.tbl_VanDriverList

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    #wrap {
        width: 300px;
        float: left;
    }

    #left, #right {
        /*border: 1px dotted red;*/
        float: left;
    }

    #left {
        width: 250px;
    }

    #right {
        width: 50px;
    }

    .button {
        border: none;
        border-radius: 4px;
        color: white;
        padding: 0;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        margin: 0;
        background-color: #8d0d82;
        font-size: 12px;
        cursor: pointer;
    }
</style>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>VAN DRIVER</h2><br />
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.serialNo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.serialNo, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.serialNo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-12">
                @Html.TextBoxFor(model => model.name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.zoneId, "Zone", htmlAttributes: new { @class = "control-label col-md-2" })
            <div id="wrap">
                <div id="left">
                    @Html.DropDownList("zoneId", null, "--Select Zone--", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.zoneId, "", new { @class = "text-danger" })
                </div>
                <div id="right">
                    <button type="button" class="btn btn-default btn-sm" style="height: 34px; width: 30px" onclick="location.href='@Url.Action("Create", "Zone")'"><span class="glyphicon glyphicon-plus"></span></button>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" style="background-color: #8d0d82; border: none; color: white" value="Create" class="btn btn-default" />
                <button type="button" style="background-color: #8d0d82; border: none; color: white" onclick="location.href='@Url.Action("Index", "VanDriver")'" class="btn btn-default">Cancel</button>
            </div>
            @if (ViewBag.message != null)
            {
                <script type="text/javascript">
                            window.onload = function () {
                                alert("@ViewBag.message");
                            };
                </script>
            }
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
